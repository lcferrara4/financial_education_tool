#ifndef LOAN_H
#define LOAN_H
#include <vector>
#include "Tax.h"
using namespace std; 

class Tax; 

class Loan{

    friend class Tax; 

    public:
        Loan();
        Loan(double, bool, double, double); 
        ~Loan(); 
        double getIrate(void); 
        double getPrinc(void);
        void setPrinc(double);
        void setTax(bool); 
        void setRate(double); 
        void setMonths(double); 
        bool getTax(void); 
        double getMonths(void); 
    private:
